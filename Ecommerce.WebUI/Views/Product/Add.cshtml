@model ProductAddViewModel


<form action="Add" method="post">
    <div class="form-group  d-none">
    <label class="mb-1">Product Id</label>
    <input asp-for="Product.ProductId" type="text" class="form-control">
</div>
<div class="form-group ">
    <label class="mb-1">Product Name</label>
    <input asp-for="Product.ProductName" type="text" class="form-control">
</div>

<div class="form-group my-3 ">
    <label class="mb-1">Unit Price</label>
    <input asp-for="Product.UnitPrice" type="number" class="form-control">
</div>

<div class="form-group ">
    <label class="mb-1">Units in stock</label>
    <input type="text" asp-for="Product.UnitsInStock" class="form-control">
</div>

<div class="form-group my-3 ">
    <label class="mb-1">Example select</label>
    <select asp-for="Product.CategoryId" class="form-control">
        @foreach (var i in Model.Categories)
        {
            <option value="@i.CategoryId">@i.CategoryName</option>
        }
    </select>
</div>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
</form>
